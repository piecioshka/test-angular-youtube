{
    "private": true,
    "name": "workshop-angular-youtube",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "clear": "rm -rf dist/",
        "clear:all": "rm -rf node_modules/ && npm run clear",
        "ng": "ng",
        "test": "ng test --watch false --browsers ChromeHeadless",
        "test:watch": "ng test --watch true",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "protractor": "protractor e2e/protractor.conf.js",
        "build": "ng build --base-href /workshop-angular-youtube/",
        "start": "ng serve",
        "build:staging": "ng build --base-href /workshop-angular-youtube/ --configuration=staging",
        "start:staging": "ng serve --configuration=staging",
        "build:mock": "node data/build-database.js",
        "start:mock": "node data/start-database.js",
        "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
        "serve:ssr": "node dist/server.js",
        "build:client-and-server-bundles": "ng build --prod && ng run workshop-angular-youtube:server",
        "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
        "predeploy:github": "npm run build:staging; dos2unix dist/browser/*",
        "deploy:github": "cross-env NODE_DEBUG=gh-pages gh-pages -d dist/browser/",
        "heroku-postbuild": "npm run build:ssr",
        "deploy:heroku": "git push heroku master -f"
    },
    "dependencies": {
        "@angular-devkit/build-angular": "^0.803.3",
        "@angular/animations": "^8.2.5",
        "@angular/common": "^8.2.5",
        "@angular/compiler": "^8.2.5",
        "@angular/core": "^8.2.5",
        "@angular/forms": "^8.2.5",
        "@angular/http": "^7.2.15",
        "@angular/platform-browser": "^8.2.5",
        "@angular/platform-browser-dynamic": "^8.2.5",
        "@angular/platform-server": "^8.2.5",
        "@angular/router": "^8.2.5",
        "@nguniversal/express-engine": "^8.1.1",
        "@nguniversal/module-map-ngfactory-loader": "^8.1.1",
        "core-js": "^3.2.1",
        "intersection-observer": "^0.7.0",
        "ngx-pagination": "^4.1.0",
        "rxjs": "^6.5.3",
        "ts-loader": "^6.0.4",
        "tslib": "^1.10.0",
        "zone.js": "^0.10.2"
    },
    "devDependencies": {
        "@angular/cli": "^8.3.3",
        "@angular/compiler-cli": "^8.2.5",
        "@angular/language-service": "^8.2.5",
        "@types/jasmine": "^3.4.0",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "^12.7.4",
        "codelyzer": "^5.1.0",
        "cross-env": "^5.2.1",
        "gh-pages": "^2.1.1",
        "jasmine-core": "^3.4.0",
        "jasmine-spec-reporter": "^4.2.1",
        "json-schema-faker": "^0.4.0",
        "json-server": "^0.15.1",
        "karma": "^4.3.0",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage-istanbul-reporter": "^2.1.0",
        "karma-jasmine": "^2.0.1",
        "karma-jasmine-html-reporter": "^1.4.2",
        "protractor": "^5.4.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.19.0",
        "typescript": "^3.5.3",
        "webpack-cli": "^3.3.8"
    }
}
