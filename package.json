{
    "private": true,
    "name": "test-angular-youtube",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "clear": "rm -rf dist/",
        "clear:all": "rm -rf node_modules/ && npm run clear",

        "ng": "ng",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",

        "build": "ng build --base-href /test-angular-youtube/",
        "start": "ng serve",
        "start:staging": "ng serve --configuration=staging",

        "predeploy:github": "npm run build:staging; dos2unix dist/browser/",
        "deploy:github": "cross-env NODE_DEBUG=gh-pages gh-pages -d dist/browser/",

        "heroku-postbuild": "npm run build:ssr",
        "deploy:heroku": "git push heroku master -f",

        "build:mock": "node data/build-database.js",
        "start:mock": "node data/start-database.js",

        "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
        "serve:ssr": "node dist/server.js",

        "build:client-and-server-bundles": "ng build --prod && ng run test-angular-youtube:server",
        "webpack:server": "webpack --config webpack.server.config.js --progress --colors"
    },
    "dependencies": {
        "@angular/animations": "^7.1.4",
        "@angular/common": "^7.1.4",
        "@angular/compiler": "^7.1.4",
        "@angular/core": "^7.1.4",
        "@angular/forms": "^7.1.4",
        "@angular/http": "^7.1.4",
        "@angular/platform-browser": "^7.1.4",
        "@angular/platform-browser-dynamic": "^7.1.4",
        "@angular/platform-server": "^7.1.4",
        "@angular/router": "^7.1.4",
        "@nguniversal/express-engine": "^7.0.2",
        "@nguniversal/module-map-ngfactory-loader": "^7.0.2",
        "core-js": "^2.6.1",
        "intersection-observer": "^0.5.1",
        "ngx-pagination": "^3.2.1",
        "rxjs": "^6.3.3",
        "ts-loader": "^5.3.2",
        "tslib": "^1.9.3",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.11.4",
        "@angular/cli": "^7.1.4",
        "@angular/compiler-cli": "^7.1.4",
        "@angular/language-service": "~7.1.0",
        "@types/jasmine": "^3.3.5",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "^10.12.18",
        "codelyzer": "^4.5.0",
        "cross-env": "^5.2.0",
        "gh-pages": "^2.0.1",
        "jasmine-core": "^3.3.0",
        "jasmine-spec-reporter": "^4.2.1",
        "json-schema-faker": "^0.4.0",
        "json-server": "^0.14.2",
        "karma": "^3.1.4",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage-istanbul-reporter": "^2.0.4",
        "karma-jasmine": "^2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "protractor": "^5.4.2",
        "ts-node": "^7.0.1",
        "tslint": "^5.12.0",
        "typescript": "3.1.1",
        "webpack-cli": "^3.2.0"
    }
}
